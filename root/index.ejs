<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= htmlWebpackPlugin.options.title %></title>
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no"
    />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <script type="systemjs-importmap">
      {
        "imports": {
          "single-spa": "<%= webpackConfig.output.publicPath %>single-spa/single-spa<%= webpackConfig.mode=='production'?'.min':'.dev' %>.js",
          "react": "<%= webpackConfig.output.publicPath %>react/react<%= webpackConfig.mode=='production'?'.production.min':'.development' %>.js",
          "react-dom": "<%= webpackConfig.output.publicPath %>react-dom/react-dom<%= webpackConfig.mode=='production'?'.production.min':'.development' %>.js",
          "main": "<%= webpackConfig.output.publicPath %><%= webpackConfig.output.filename %>",
          "app1": "<%= webpackConfig.output.publicPath %>app1.bundle.js",
          "app2": "<%= webpackConfig.output.publicPath %>app2.bundle.js",
          "app3": "<%= webpackConfig.output.publicPath %>app3.bundle.js"
        }
      }
    </script>
    <script
      type="text/javascript"
      src="<%= webpackConfig.output.publicPath %>systemjs/system<%= webpackConfig.mode=='production'?'.min':'' %>.js"
    ></script>
    <script
      type="text/javascript"
      src="<%= webpackConfig.output.publicPath %>systemjs/extras/named-exports<%= webpackConfig.mode=='production'?'.min':'' %>.js"
    ></script>
    <script
      type="text/javascript"
      src="<%= webpackConfig.output.publicPath %>systemjs/extras/use-default<%= webpackConfig.mode=='production'?'.min':'' %>.js"
    ></script>
  </head>
  <body>
    <div><%= webpackConfig.mode %></div>
    <script>
      System.import("main");
    </script>
  </body>
</html>
